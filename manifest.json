{
  "browser_specific_settings": {
    "gecko": {}
  },
  "background": {
    "scripts": []
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon.png",
      "38": "icons/icon.png"
    },
    "default_title": "",
    "default_popup": ""
  },
  "commands": {},
  "content_security_policy": "",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "default_locale": "en",
  "description": "Elevate your online reading experience with Wordwise.",
  "icons": {
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "manifest_version": 2,
  "name": "Wordwise",
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "permissions": ["storage", "activeTab"],
  "version": "1.0",
  "web_accessible_resources": [
    "css/popup.css",
    "locales/en/messages.json"
  ]
}
