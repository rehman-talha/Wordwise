{
  "name": "WebWisdom",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Elevate your online reading experience with WebWisdom, an intelligent companion for enhanced comprehension.",
  "icons": {
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "default_locale": "en",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_icon": {
      "48": "icons/icon.png"
    },
    "default_title": "WebWisdom",
    "default_popup": "popup/popup.html"
  },
  "web_accessible_resources": [
    "css/popup.css",
    "locales/en/messages.json"
  ],
  "applications": {
    "gecko": {
      "strict_min_version": "68.0"
    }
  },
  "browser_specific_settings": {
    "gecko": {
    }
  }
}
